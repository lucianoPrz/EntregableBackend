<div>
    <div>
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/cart/{{carrito}}">Ver Carrito</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <h1>Productos en el carrito</h1>
      <p id="cart">{{carrito}}</p>
    <div class="container-fluid d-flex justify-content-around">
        <div class="row row-cols-5">
            {{#each products}}
            <div class="col">
                <div class="card" style="width: 18rem;">
                    {{!-- <img src={{this.thumbnail}} class="card-img-top" alt="..."> --}}
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{this.product.title}}</h5>
                        <p class="card-text">{{this.quantity}}</p>
                        <p class="card-text fw-bolder">{{this.product.price}}</p>
                        <a class="btn btn-primary remove-from-cart" data-cart="{{carrito}}"
                            data-product-id="{{this.product._id}}">Quitar del carrito</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="container-fluid d-flex justify-content-around mt-4">
        <nav aria-label="Page navigation example">
            <a href="/" class="btn btn-info">Seguir comprando</a>
            <a id="purchase" class="btn btn-success" data-cart-id="{{carrito}}" data-email="{{user.email}}">Finalizar compra</a>    
        </nav>
    </div>
</div>

<script src="/js/cartManagement.js"></script>

