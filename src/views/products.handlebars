<div>
    <h1>Productos</h1>
    <div class="container-fluid d-flex justify-content-around">
        {{#each products.docs}}
            <div class="card" style="width: 18rem;">
            {{!-- <img src={{this.thumbnail}} class="card-img-top" alt="..."> --}}
                <div class="card-body">
                    <h5 class="card-title fw-bold">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text fw-bolder">{{this.price}}</p>
                    <a href="#" class="btn btn-primary">Agregar al carrito</a>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="container-fluid d-flex justify-content-around">
        
        {{#if products.hasPrevPage}}
            <a class="btn btn-primary" href={{products.prevLink}}>Anterior</a>
        {{/if}}
        
        <span class="btn btn-light">PÃ¡gina {{products.page}} de {{products.totalPages}}</span>
        
        {{#if products.hasNextPage}}
            <a class="btn btn-primary" href={{products.nextLink}}>Siguiente</a>
        {{/if}}
        
    </div>
</div>